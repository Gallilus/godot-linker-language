env.Append(CPPPATH=['F:/vcpkg/installed/x64-windows/include'])
env.Append(CPPPATH=['F:/vcpkg/installed/x64-windows/include/igraph'])
env.Append(LIBPATH=['F:/vcpkg/installed/x64-windows/lib'])
env.Append(LIBS=['igraph'])